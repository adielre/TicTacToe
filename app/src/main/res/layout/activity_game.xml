<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="X score"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txvXscore"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#c0c0c0"
                android:gravity="center"
                android:text="0"
                android:textColor="#001be7"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Draws"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txvDraws"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#c0c0c0"
                android:gravity="center"
                android:text="0"
                android:textColor="#001be7"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="O score"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txvOscore"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#c0c0c0"
                android:gravity="center"
                android:text="0"
                android:textColor="#001be7"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txvTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="X Turn"
        android:textColor="#001be7"
        android:textSize="37sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:stretchColumns="0.5">
            <TableRow>

                <Button
                    android:id="@+id/btn00ID"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btn01ID"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btn02ID"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="48sp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn10ID"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:textSize="48sp"
                    android:text="" />
                <Button
                    android:id="@+id/btn11ID"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:textSize="48sp"
                    android:text="" />
                <Button
                    android:id="@+id/btn12ID"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:textSize="48sp"
                    android:text=""/>
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn20ID"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:textSize="48sp"
                    android:text="" />
                <Button
                    android:id="@+id/btn21ID"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:textSize="48sp"
                    android:text="" />
                <Button
                    android:id="@+id/btn22ID"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:textSize="48sp"
                    android:text=""/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnPlayAgainID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="PLAY AGAIN !"
            android:textSize="16sp"
            android:textStyle="bold" />



    </LinearLayout>
</LinearLayout>